
<% if current_user.fav?(@micropost) %>
<%= form_for(current_user.favorites.find_by(follow_id: current_user.id), html: { method: :delete }) do |f| %>
  <%= hidden_field_tag :follow_id %>
  <%= f.submit 'お気に入りしない', class: 'btn btn-danger btn-block' %>
<% end %>
<% else %>
<%=logger.debug("favorites: #{current_user}") %>
<%= form_for(current_user.favorites.build) do |f| %>
  <%= hidden_field_tag :micropost_id, micropost.id %>
  <%= f.submit 'お気に入り', class: 'btn btn-primary btn-block' %>
<% end %>
<% end %>